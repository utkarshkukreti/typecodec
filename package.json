{
  "name": "typecodec",
  "version": "0.9.3",
  "description": "Fast, type-safe runtime validation of unknown data for TypeScript.",
  "keywords": [],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "tsc && vitest --run",
    "prepare": "pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bench": "node --loader ts-node/esm benchmarks/index.ts"
  },
  "devDependencies": {
    "@types/node": "18.14.6",
    "benny": "3.7.1",
    "prettier": "2.8.4",
    "ts-node": "10.9.1",
    "tsup": "6.6.3",
    "typescript": "4.9.5",
    "vitest": "0.29.2"
  }
}
