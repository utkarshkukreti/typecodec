{
  "name": "typecodec",
  "version": "0.11.0",
  "description": "Fast, type-safe runtime validation of unknown data for TypeScript.",
  "keywords": [
    "typescript",
    "schema",
    "validation",
    "unknown"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/utkarshkukreti/typecodec"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "tsc && vitest --run",
    "prepare": "pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bench": "vite-node benchmarks/index.ts"
  },
  "devDependencies": {
    "@types/node": "20.8.8",
    "benny": "3.7.1",
    "prettier": "3.0.3",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vite-node": "0.34.6",
    "vitest": "0.34.6"
  }
}
